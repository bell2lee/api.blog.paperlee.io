
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogEntity {
  id    String   @id
  name  String
}

model PostEntity {
  blogId    String
  id        String @unique
  title     String
  content   String?
  comments  PostCommentEntity[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@id([blogId, id])
}

model PostCommentEntity {
  id      Int    @id @default(autoincrement())
  author  String
  content String
  postId  String
  post    PostEntity   @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

